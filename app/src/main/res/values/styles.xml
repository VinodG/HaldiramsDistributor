<resources>

    <!-- Base application theme. -->
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/app_color</item>
        <item name="android:alertDialogTheme">@style/Custom_Dialog_Alert</item>
        <item name="windowNoTitle">true</item>
        <item name="windowActionBar">false</item>
    </style>

    <style name="Custom_Dialog_Alert">
        <item name="android:windowBackground">@color/white</item>
    </style>


    <style name="Btn_Green_wrap" parent="@android:attr/button">
        <item name="android:gravity">center</item>
        <item name="android:background">@drawable/input_new</item>
        <item name="android:padding">@dimen/margin_5</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">25dp</item>
        <item name="android:layout_margin">@dimen/margin_2</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:drawablePadding">@dimen/margin_1</item>
        <item name="android:textSize">@dimen/text_size_small</item>
    </style>

    <style name="Layout_Top_withBtn" parent="@android:attr/layout">
        <item name="android:gravity">center_vertical</item>
        <item name="android:paddingTop">@dimen/margin_2</item>
        <item name="android:paddingBottom">@dimen/margin_2</item>
        <item name="android:paddingLeft">@dimen/margin_2</item>
        <item name="android:paddingRight">@dimen/margin_2</item>
        <item name="android:orientation">vertical</item>
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@color/white</item>
    </style>

</resources>
